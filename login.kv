#: import WipeTransition kivy.uix.screenmanager.WipeTransition


<GridLayout>
<FloatLayout>
ScreenManagement:
    LoginPage:
    UserPage:

<LoginPage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg-2.png'
    name: "login_page"
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.center_x -100, self.center_y
                size: (200,200)
                source: 'logo.png'
        Label:
            id: info
            text: ''
            markup: True
            pos_hint: {"x":0,"top": 0.98}
        TextInput:
            id: login
            hint_text: "Username.."
            font_size: 24
            multiline: False
            halign: 'left'
            valign: 'middle'
            size_hint: 0.5,0.07
            pos_hint: {"x":0.25,"top": 0.45}

        CheckBox:
            size_hint: 0.07,0.07
            pos_hint: {"x":0.77,"top": 0.45}

        TextInput:
            id: passw
            hint_text: "Password.."
            font_size: 24
            multiline: False
            halign: 'left'
            valign: 'middle'
            size_hint: 0.5,0.07
            pos_hint: {"x":0.25,"top": 0.35}
            password: True # hide password

        CheckBox:
            size_hint: 0.07,0.07
            pos_hint: {"x":0.77,"top": 0.35}

        Button:
            text: "Login"
            font_size: 24
            size_hint: 0.3,0.07
            pos_hint: {"x":0.35,"top": 0.25}
            on_press:
                app.root.transition = WipeTransition()
                root.verify_credentials()


<UserPage>:
    name: "user"
    GridLayout:
        cols: 1
        Label:
            text: "Velkommen"
        Label:
            text: "Velkommen"
        Button:
            text: "Turn around"
            on_release: app.root.current = "login_page"